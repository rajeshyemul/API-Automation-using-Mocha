{
    "env": {
        "browser": true,
        "es2021": true,
        "mocha":true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": 1,
        "no-unused-vars":["error", { "varsIgnorePattern": "^_(C|R|D)[A-Z]","argsIgnorePattern":"^t$" }],
        "@typescript-eslint/no-unused-vars": ["error", { "varsIgnorePattern": "^_(C|R|D)[A-Z]","argsIgnorePattern":"^t$" }],
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "no-template-curly-in-string":0
    }
}
